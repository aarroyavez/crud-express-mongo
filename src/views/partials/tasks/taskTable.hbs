{{#if tasks}}
  <div class="table-responsive">
    <table class="table table-bordered border-success table-hover table-dark table-sm ">
      <thead class="text-center">
        <tr>
          <th>N° Task</th>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody class="text-center">
        {{#each tasks}}
          <tr>
            <td>{{@index}}</td>
            <td>
              <span style="{{#if done}}text-decoration: line-through;color: violet;{{/if}}">
                {{{title}}}
              </span>
            </td>
            <td>
              <span style="{{#if done}}text-decoration: line-through;color: violet;{{/if}}">
                {{description}}
              </span>
            </td>
            <td>
              <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                {{#if done}}
                  <a href="/tasks/{{_id}}/toggleDone" class="btn btn-secondary" onclick="return confirmUndone()">Undone</a>
                {{else}}
                  <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success" onclick="return confirmDone()">Done</a>
                {{/if}}
                <a href="/tasks/{{_id}}/edit" class="btn btn-light">Update</a>
                <a href="/tasks/{{_id}}/delete" class="btn btn-danger" onclick="return confirmDelete()">Delete</a>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No Tasks</h1>
      <img src="/icons/taskListIcon.png" class="w-50" />
    </div>
  </div>
{{/if}}

<script>
  function confirmDone() {
    alert("Tarea completada satisfactoriamente");
    return true;
  }

  function confirmUndone() {
    alert("Tarea marcada como no realizada");
    return true;
  }

  function confirmDelete() {
    return confirm("¿Está seguro que desea eliminar esta tarea?");
  }
</script>
