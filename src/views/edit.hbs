<div class="contain">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-card p-4 text-white">

        <h1>Update your task</h1>

        <form action="/tasks/{{task._id}}/edit" method="POST">

          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="Title"
              value="{{task.title}}"
              class="form-control rounded-0 bg-black text-white"
            />
          </div>

          <div class="mb-3">
            <textarea
              name="description"
              rows="3"
              placeholder="Add a description"
              class="form-control rounded-0 bg-black text-white"
            >{{task.description}}</textarea>
          </div>

          <!-- Botón de actualización con mensaje de alerta -->
          <button class="btn btn-success" onclick="showConfirmationMessage()">Update</button>

        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function showConfirmationMessage() {
    alert("Tarea actualizada satisfactoriamente");
  }
</script>
